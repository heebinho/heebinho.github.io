<nav class="grid grid-cols-2 px-5 py-5 border-b rounded-b-3xl bg-neutral text-neutral-content">
  <div class="">
    <a href="/" class="font-semibold text-xl tracking-tight">#</a>
  </div>
  <div class="">

    {% set navPages = collections.all | eleventyNavigation %}
    <ul class="text-right">
      {% for entry in navPages %}
        {% if not entry.hide %}
          <li class="inline">
            <a
            href="{{ entry.url }}"
            class="uppercase text-sm py-1 px-2 rounded mr-4 inline-block
            {{'bg-yellow-100 text-black' if entry.url in page.url
            else 'text-white hover:text-gray-900'}}">
            {{ entry.title }}
          </a>
          </li>
        {% endif %}
      {% endfor %}
  </ul>

  </div>
</nav>

